#include "../../Shader/dxlib_ps.h"

//==============================================================
//! [定数バッファ] モデル情報
//==============================================================
cbuffer ModelInfo : register(b4)
{
	float4	meshColor_;	//!< モデルの色
};

//----------------------------------------------------------------------------
// メイン関数
//----------------------------------------------------------------------------
PS_OUTPUT main(PS_INPUT_3D input)
{
	PS_OUTPUT	output;

	output.color0_ = meshColor_;

	// 出力パラメータを返す
	return output;
}
